<%= form_for @post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div>
    <%= f.label :thumbnail, 'thumbnail url' %>
    <%= f.text_field :thumbnail_url %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body, size: '60x12' %>
  </div>
  <%= f.submit 'Create' %>
<% end %>
